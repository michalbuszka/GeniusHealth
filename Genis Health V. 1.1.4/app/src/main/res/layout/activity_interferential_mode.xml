<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".BurstModulatedMode">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <RelativeLayout
            style="@style/header">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/interferentialBackArrow"
                    android:backgroundTint="#151643"
                    style="@style/headerBackArrow"/>
                <ImageView
                    style="@style/headerIcon"
                    android:src="@drawable/interferential_mode_icon"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Interferential mode"
                    android:textColor="@color/white"
                    android:textSize="22sp" />
            </LinearLayout>
            <Button
                android:id="@+id/nextInterferentialButton"
                android:text="Next"
                android:layout_marginRight="15dp"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:stretchColumns="*"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true">
                <TableRow>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginBottom="8dp"
                            android:text="Channels: 1, 2"
                            android:textColor="@color/black"
                            android:textSize="20dp" />
                        <Switch
                            android:id="@+id/interferentialOnOff1"
                            style="@style/onOffSwitch"/>
                        <TextView
                            style="@style/descriptionText"
                            android:text="Program: "/>
                        <Spinner
                            android:id="@+id/interferentialProgram1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:entries="@array/interferentialProgramResource"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:textSize="18dp"
                            android:text="Time duration: "/>
                        <Spinner
                            android:id="@+id/interferentialTimeDuration1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:entries="@array/burstTimeDuration"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginBottom="8dp"
                            android:text="Channels: 3, 4"
                            android:textColor="@color/black"
                            android:textSize="20dp" />
                        <Switch
                            android:id="@+id/interferentialOnOff3"
                            style="@style/onOffSwitch"/>/>
                        <TextView
                            style="@style/descriptionText"
                            android:text="Program: "/>
                        <Spinner
                            android:id="@+id/interferentialProgram3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:entries="@array/interferentialProgramResource"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:textSize="18dp"
                            android:text="Time duration: "/>
                        <Spinner
                            android:id="@+id/interferentialTimeDuration3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:entries="@array/burstTimeDuration"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginBottom="8dp"
                            android:text="Channels: 5, 6"
                            android:textColor="@color/black"
                            android:textSize="20dp" />
                        <Switch
                            android:id="@+id/interferentialOnOff5"
                            style="@style/onOffSwitch"/>
                        <TextView
                            android:text="Program: "
                            style="@style/descriptionText"/>
                        <Spinner
                            android:id="@+id/interferentialProgram5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:entries="@array/interferentialProgramResource"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:textSize="18dp"
                            android:text="Time duration: "/>
                        <Spinner
                            android:id="@+id/interferentialTimeDuration5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:entries="@array/burstTimeDuration"
                            />
                    </LinearLayout>
                </TableRow>
                <TableRow android:layout_marginTop="80dp">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginBottom="8dp"
                            android:text="Channels: 7, 8"
                            android:textColor="@color/black"
                            android:textSize="20dp" />
                        <Switch
                            android:id="@+id/interferentialOnOff7"
                            style="@style/onOffSwitch"/>/>
                        <TextView
                            style="@style/descriptionText"
                            android:text="Program: "/>
                        <Spinner
                            android:id="@+id/interferentialProgram7"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:entries="@array/interferentialProgramResource"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:textSize="18dp"
                            android:text="Time duration: "/>
                        <Spinner
                            android:id="@+id/interferentialTimeDuration7"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:entries="@array/burstTimeDuration"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginBottom="8dp"
                            android:text="Channels: 9, 10"
                            android:textColor="@color/black"
                            android:textSize="20dp" />
                        <Switch
                            android:id="@+id/interferentialOnOff9"
                            style="@style/onOffSwitch"/>/>
                        <TextView
                            style="@style/descriptionText"
                            android:text="Program: "/>
                        <Spinner
                            android:id="@+id/interferentialProgram9"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:entries="@array/interferentialProgramResource"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:textSize="18dp"
                            android:text="Time duration: "/>
                        <Spinner
                            android:id="@+id/interferentialTimeDuration9"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:entries="@array/burstTimeDuration"
                            />

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginBottom="8dp"
                            android:text="Channels: 11, 12"
                            android:textColor="@color/black"
                            android:textSize="20dp" />
                        <Switch
                            android:id="@+id/interferentialOnOff11"
                            style="@style/onOffSwitch"/>
                        <TextView
                            style="@style/descriptionText"
                            android:text="Program: "/>
                        <Spinner
                            android:id="@+id/interferentialProgram11"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:entries="@array/interferentialProgramResource"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:textSize="18dp"
                            android:text="Time duration: "/>
                        <Spinner
                            android:id="@+id/interferentialTimeDuration11"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:entries="@array/burstTimeDuration"
                            />
                    </LinearLayout>
                </TableRow>
            </TableLayout>
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>