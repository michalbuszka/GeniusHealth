<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="22sp"
        android:gravity="center_horizontal"
        android:textColor="@color/black"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:text="Channel settings"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_marginLeft="60dp"
            android:layout_marginRight="60dp"
            android:layout_marginBottom="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                style="@style/editChannelDescription"
                android:text="Amplitude"/>
            <LinearLayout
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/editChannelAmplitudeMinus"
                    style="@style/amplitudeMinus"/>
                <TextView
                    android:id="@+id/editChannelShowAmplitude"
                    android:textSize="18dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:text="-"/>
                <Button
                    android:id="@+id/editChannelAmplitudePlus"
                    style="@style/amplitudePlus"/>
            </LinearLayout>
            <TextView
                style="@style/editChannelDescription"
                android:text="Carrier frequency"/>
            <LinearLayout
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <Button
                    style="@style/amplitudeMinus"
                    android:id="@+id/editChannelCarrierFrequencyMinus"
                    />
                <TextView
                    android:id="@+id/editChannelShowCarrierFrequency"
                    android:textSize="18dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:text="-"
                    />
                <Button
                    android:id="@+id/editChannelCarrierFrequencyPlus"
                    style="@style/amplitudePlus"
                    />
            </LinearLayout>
            <TextView
                style="@style/editChannelDescription"
                android:text="Base frequency min"/>
            <LinearLayout
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/editChannelMinBaseFrequencyMinus"
                    style="@style/amplitudeMinus"/>
                <TextView
                    android:id="@+id/editChannelShowMinBaseFrequency"
                    android:textSize="18dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:text="200Hz"/>

                <Button
                    android:id="@+id/editChannelMinBaseFrequencyPlus"
                    style="@style/amplitudePlus" />
            </LinearLayout>
            <TextView
                style="@style/editChannelDescription"
                android:text="Base frequency max"/>
            <LinearLayout
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/editChannelMaxBaseFrequencyMinus"
                    style="@style/amplitudeMinus"/>
                <TextView
                    android:id="@+id/editChannelShowMaxBaseFrequency"
                    android:textSize="18dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:text="200Hz"/>
                <Button
                    android:id="@+id/editChannelMaxBaseFrequencyPlus"
                    style="@style/amplitudePlus"/>
            </LinearLayout>
            <TextView
                style="@style/editChannelDescription"
                android:text="Signal type"/>
            <Spinner
                android:id="@+id/editChannelProgram"
                style="@style/programSpinner" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="60dp"
            android:layout_marginTop="30dp"
            android:orientation="vertical">
            <TextView
                style="@style/editChannelDescription"
                android:text="Time"/>
            <Spinner
                android:id="@+id/editChannelTimeDuration"
                style="@style/programSpinner"
                android:entries="@array/burstTimeDuration"
                />
            <TextView
                style="@style/editChannelDescription"
                android:text="Delay"/>
            <Spinner
                android:id="@+id/editChannelDelay"
                style="@style/programSpinner"
                android:entries="@array/delay"
                />
            <TextView
                style="@style/editChannelDescription"
                android:text="Duty"/>
            <Spinner
                android:id="@+id/editChannelDuty"
                android:layout_width="120dp"
                style="@style/programSpinner"
                android:entries="@array/duty"
                />
            <TextView
                style="@style/editChannelDescription"
                android:text="Pulse"/>
            <Spinner
                android:id="@+id/editChannelPulse"
                style="@style/programSpinner"
                android:entries="@array/pulse"
                />
            <TextView
                style="@style/editChannelDescription"
                android:text="Pulse on"/>
            <Spinner
                android:layout_width="120dp"
                android:id="@+id/editChannelPulseOn"
                style="@style/programSpinner"
                />
            <TextView
                style="@style/editChannelDescription"
                android:text="Ramp rise"/>
            <Spinner
                android:layout_width="120dp"
                android:id="@+id/editChannelRampRise"
                style="@style/programSpinner"
                android:entries="@array/rampRise"
                />
            <TextView
                style="@style/editChannelDescription"
                android:text="Ramp fall"/>
            <Spinner
                android:id="@+id/editChannelRampFall"
                style="@style/programSpinner"
                android:entries="@array/rampFall"
                />
            <TextView
                style="@style/editChannelDescription"
                android:text="Cycle"/>
            <Spinner
                android:id="@+id/editChannelCycleTime"
                style="@style/programSpinner"
                android:entries="@array/cycleTime"
                />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>